<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outgoing_audio_relative"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/outgoing_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/outgoingName"
            android:layout_marginLeft="@dimen/margin_80dp"
            android:layout_marginTop="@dimen/dime_5dp"
            android:layout_marginRight="@dimen/dime_10dp"
            android:background="@drawable/sender_bubble"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/outgoing_audio_container">

                    <ImageView
                        android:id="@+id/outgoing_image_view_icon_audio"
                        android:layout_width="@dimen/dime_30dp"
                        android:layout_height="@dimen/dime_30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:padding="2dp"
                        android:src="@drawable/audio_icon"
                        android:visibility="visible" />

                    <ProgressBar
                        android:id="@+id/outgoing_image_view_audio_pb"
                        android:layout_width="@dimen/dime_30dp"
                        android:layout_height="@dimen/dime_30dp"
                        android:background="@drawable/cancel_icon_pb"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:padding="2dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/outgoing_image_view_audio_retry"
                        android:layout_width="@dimen/dime_30dp"
                        android:layout_height="@dimen/dime_30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:padding="2dp"
                        android:src="@drawable/retry_upload"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/outgoing_audio_container"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/outgoing_image_view_audio"
                        android:layout_width="@dimen/dime_30dp"
                        android:layout_height="@dimen/dime_30dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:padding="2dp"
                        android:src="@drawable/play_icon"
                        android:visibility="visible" />



                    <ImageView
                        android:id="@+id/outgoing_image_view_audio_stop"
                        android:layout_width="@dimen/dime_30dp"
                        android:layout_height="@dimen/dime_30dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:padding="2dp"
                        android:src="@drawable/pause_white"
                        android:visibility="gone" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/outgoing_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/linear_play"
                    android:backgroundTint="@color/white"
                    android:progressTint="@color/white" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_play"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/outgoing_audio_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dime_20dp"
                        android:layout_toLeftOf="@+id/tickMarkFirstOutAudio"
                        android:text="12.00 pm"
                        android:textColor="#FFF"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/tickMarkFirstOutAudio"
                        android:layout_width="@dimen/margin_15dp"
                        android:layout_height="@dimen/margin_15dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/undelivered"
                        android:visibility="visible" />

                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

   </RelativeLayout>