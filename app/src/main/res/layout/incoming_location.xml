<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/tools"
    android:id="@+id/incoming_location_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/incoming_location_click"
        android:layout_width="220dp"
        android:layout_height="210dp"
        android:layout_marginLeft="@dimen/dime_5dp"
        android:layout_marginTop="@dimen/dime_5dp"
        android:layout_gravity="right"
        android:background="@drawable/reciever_bubble"
        android:orientation="vertical">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/incoming_map_image_IV"
                android:layout_width="match_parent"

                app:riv_corner_radius_top_left="15dip"
                app:riv_corner_radius_top_right="15dip"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fake_mapmin"
                app:riv_mutate_background="true"
                app:riv_oval="false"
                app:riv_tile_mode="repeat"  />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/outgoing_text"

                android:weightSum="1">

                <TextView
                    android:id="@+id/incoming_location_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:text="CentralMall,Indoreertgergergergergerhrterherhdfghdfghdfghdfghdfghdfghdfghdfghdhdfghdfghdfghdfghdfghdfhdfghdghdhdfghdghdhhfgfghdfgh"
                    android:maxLines="2"

                    android:textColor="#CD837E7E"
                    android:textSize="12dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/incoming_location_time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginBottom="5dp"
                    android:text="12.00 pm"
                    android:textColor="@color/grey"
                    android:textSize="10sp" />


            </RelativeLayout>
    </LinearLayout>
</RelativeLayout>